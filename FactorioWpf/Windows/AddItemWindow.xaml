<Window x:Class="FactorioWpf.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FactorioWpf"
        mc:Ignorable="d"
        Title="Add new item" Height="Auto" Width="300" SizeToContent="Height"
        ResizeMode="NoResize" 
        KeyDown="Window_KeyDown">

    <StackPanel Margin="5 5 5 5">

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="Name"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Output" />
            <Label Grid.Column="0" Grid.Row="2" Content="Time" />
            <Label Grid.Column="0" Grid.Row="3" Content="Crafting" />

            <TextBox Grid.Column="1" Grid.Row="0" Name="AddItemName" Margin="0 3 0 3"/>
            <TextBox Grid.Column="1" Grid.Row="1" Name="AddItemOutput" Margin="0 3 0 3"/>
            <TextBox Grid.Column="1" Grid.Row="2" Name="AddItemTime" Margin="0 3 0 3"/>
            <ComboBox Grid.Column="1" Grid.Row="3" Name="AddItemCrafting" Margin="0 3 0 3"
                      Loaded="CraftingStations_Loaded" />

        </Grid>

        <Grid>
            
        </Grid>

        <Grid Margin="0 5 0 0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Name="AddItemOk" Click="AddItemOk_Click" Content="Ok" Margin="3 3 3 3"/>
            <Button Grid.Column="1" Name="AddItemCancel" Click="AddItemCancel_Click" Content="Cancel" Margin="3 3 3 3"/>
            
        </Grid>

    </StackPanel>

</Window>
